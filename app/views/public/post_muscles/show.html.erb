<section class="main__muscleshow">
  <div class="container">
    <div class="main__muscleshow--inner">
      <article class="main__muscleshow--area">
        <div class="main__muscleshow--thumbnail">
          <%= attachment_image_tag(@postmuscle, :image, :fill, 1110, 500, format: "jpeg", class: "main__muscleshow--image") %>
        </div>
        <div class="main__muscleshow--textarea">
          <h2 class="main__muscleshow--title">
            <%= @postmuscle.title%>
          </h2>
          <p class="main__muscleshow--date">
            <%= @postmuscle.posted_date%>
            <span class="main__muscleshow--view fas fa-eye"><%= number_with_delimiter(@pageviews) %></span>
          </p>
          <div class="main__muscleshow--text">
            <%= markdown(@postmuscle.body) %>
          </div>
        </div>
      </article>
      <div class="main__muscleshow--buttonlist">
        <div class="main__muscleshow--buttonitem">
          <%= link_to @postmuscle.amazon_link, target: :_blank, rel: "noopener noreferrer" do %>
            <button class="main__muscleshow--amazonlink">Amazonで購入</button>
          <% end %>
        </div>
        <div class="main__muscleshow--buttonitem">
          <%= link_to @postmuscle.iheab_link, target: :_blank, rel: "noopener noreferrer" do %>
            <button class="main__muscleshow--iheablink">iHerbで購入</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>