<section class="main__viscerashow">
  <div class="container">
    <div class="main__viscerashow--inner">
      <article class="main__viscerashow--area">
        <div class="main__viscerashow--thumbnail">
          <%= attachment_image_tag(@postviscera, :image, :fill, 1110, 500, format: "jpeg", class: "main__viscerashow--image") %>
        </div>
        <div class="main__viscerashow--textarea">
          <h2 class="main__viscerashow--title">
            <%= @postviscera.title%>
          </h2>
          <p class="main__viscerashow--date">
            <%= @postviscera.posted_date%>
            <span class="main__viscerashow--view fas fa-eye"><%= number_with_delimiter(@pageviews) %></span>
          </p>
          <div class="main__viscerashow--text">
            <%= markdown(@postviscera.body) %>
          </div>
        </div>
      </article>
      <div class="main__viscerashow--buttonlist">
        <div class="main__viscerashow--buttonitem">
          <%= link_to @postviscera.amazon_link, target: :_blank, rel: "noopener noreferrer" do %>
            <button class="main__viscerashow--amazonlink">Amazonで購入</button>
          <% end %>
        </div>
        <div class="main__viscerashow--buttonitem">
          <%= link_to @postviscera.iheab_link, target: :_blank, rel: "noopener noreferrer" do %>
            <button class="main__viscerashow--iheablink">iHerbで購入</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>