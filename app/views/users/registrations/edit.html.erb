<section class="main__myedit">
  <div class="container">
    <div class="main__myedit--inner">
      <div class="row">
        <h2 class="col-lg-12 main__myedit--title">
          登録情報の変更
        </h2>
      </div>
      <div class="main__myedit--formlist">
        <%= form_with model: @user, url: user_registration_path, method: :PATCH, local: true do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="main__myedit--username">
            <div class="row">
              <label class="col-lg-12">ユーザーネーム</label>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "main__myedit--formitem" %>
              </div>
            </div>
          </div>
          <div class="main__myedit--email">
            <div class="row">
              <label class="col-lg-12">メールアドレス</label>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "main__myedit--formitem" %>
              </div>
            </div>
          </div>
          <div class="main__myedit--password">
            <div class="row">
              <label class="col-lg-12">現在のパスワード</label>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.password_field :current_password, autocomplete: "current-password", class: "main__myedit--formitem" %>
              </div>
            </div>
          </div>
          <div class="main__myedit--newpassword">
            <div class="row">
              <label class="col-lg-12">変更後のパスワード</label>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.password_field :password, autocomplete: "new-password", class: "main__myedit--formitem" %>
              </div>
            </div>
          </div>
          <div class="main__myedit--verification">
            <div class="row">
              <label class="col-lg-12">※確認のため、もう一度変更後のパスワードを入力してください</label>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "main__myedit--formitem" %>
              </div>
            </div>
          </div>
          <span class="main__myedit--button">
            <%= f.submit "登録情報を変更する", class: "main__myedit--action" %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</section>