<section class="modal fade" id="loginModal">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content modal__login">
      <div class="container">
        <div class="modal-header">
          <h2 class="modal-title">
            Sumadoraにログイン
          </h2>
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_with model: @user = User.new, url: user_session_path, id: "new_user", class: "new_user", local: true do |f| %>

            <div class="modal__login--email">
              <div class="row">
                <label class="col-lg-12">メールアドレス</label>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "modal__login--form" %>
                </div>
              </div>
            </div>

            <div class="modal__login--password">
              <div class="row">
                <label class="col-lg-12">パスワード</label>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <%= f.password_field :password, autocomplete: "current-password", class: "modal__login--form" %>
                </div>
              </div>
            </div>

            <div class="modal__login--button">
              <%= f.submit "ログイン", class: "modal__login--action" %>
            </div>

          <% end %>
        </div>
        <div class="modal-footer">
          <div class="modal__login--text">
            <p class="row">
              <%= link_to "登録がまだの方はこちらからサインアップ", "", "data-toggle": "modal", "data-target": "#signUpModal", "onClick": "changesignUpModal()" ,class: "col-lg-12" %>
            </p>
            <p class="row">
              <%= link_to "パスワードをお忘れの方はこちら", new_user_password_path, class: "col-lg-12" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>